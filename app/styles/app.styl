//- ------------------------------
//- Login and Register Container Styling
//- ------------------------------
.authentication-container
	padding 0px
	text-align center
	h1
		text-transform uppercase
		color #ffffff
		padding 30px 0px
	label
		margin 10px 0
		color #fff
		font-size 14px
	input
		form-unit()
	button	
		form-unit()
		color #ffffff
		background none
		border 2px solid #fff
//- ------------------------------




